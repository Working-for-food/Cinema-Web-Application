@model Web.ViewModels.Admin.Cinemas.CinemaEditVm

@{
    ViewData["Title"] = "Create Cinema";
}

@* 1. Added a section with 'gray-bg' to use your layout styles *@
<section class="py-5 gray-bg">
    <div class="container-fluid">
        @* 2. Applied 'section-title' for the maroon header and gold line *@
        <h1 class="section-title">Create Cinema</h1>

        @* 3. Wrapped form in your custom 'card' component *@
        <div class="card shadow-sm col-lg-8 mx-auto">
            <div class="card-header">
                <h5 class="mb-0"><i class="fas fa-plus-circle me-2"></i>Cinema Registration</h5>
            </div>

            <div class="card-body p-4">
                <form asp-area="Admin" asp-controller="Cinemas" asp-action="Create" method="post">
                    @Html.AntiForgeryToken()

                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    @* Inputs now automatically inherit styles from _forms.css via 'form-control' *@
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label">Cinema Name</label>
                        <input asp-for="Name" class="form-control" placeholder="Enter cinema name" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="City" class="form-label">City</label>
                            <input asp-for="City" class="form-control" placeholder="e.g., Kyiv" />
                            <span asp-validation-for="City" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Address" class="form-label">Street Address</label>
                            <input asp-for="Address" class="form-control" placeholder="123 Movie Lane" />
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="d-flex justify-content-end gap-2 mt-4">
                        <a asp-area="Admin" asp-controller="Cinemas" asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-1"></i> Back
                        </a>
                        @* 4. Swapped 'btn-primary' for your custom 'btn-maroon' *@
                        <button type="submit" class="btn btn-maroon">
                            <i class="fas fa-save me-1"></i> Create Cinema
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}