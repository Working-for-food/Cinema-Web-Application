@model Web.ViewModels.Admin.Cinemas.CinemaEditVm

@{
    ViewData["Title"] = "Створення кінотеатру";
}

<section class="py-5 gray-bg">
    <div class="container-fluid">

        <h1 class="section-title">Створити кінотеатр</h1>

        <div class="card shadow-sm col-lg-8 mx-auto">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fa-solid fa-plus me-2"></i>
                    Реєстрація кінотеатру
                </h5>
            </div>

            <div class="card-body p-4">
                <form asp-area="Admin"
                      asp-controller="Cinemas"
                      asp-action="Create"
                      method="post">

                    @Html.AntiForgeryToken()

                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="mb-3">
                        <label asp-for="Name" class="form-label text-muted">
                            <i class="fa-solid fa-film me-1"></i>
                            Назва кінотеатру
                        </label>
                        <input asp-for="Name" class="form-control" placeholder="Введіть назву кінотеатру" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="City" class="form-label text-muted">
                            <i class="fa-solid fa-location-dot me-1"></i>
                            Місто
                        </label>
                        <input asp-for="City" class="form-control" placeholder="наприклад, Київ" />
                        <span asp-validation-for="City" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Address" class="form-label text-muted">
                            <i class="fa-solid fa-map-location-dot me-1"></i>
                            Адреса
                        </label>
                        <input asp-for="Address" class="form-control" placeholder="вул. Кінозіркова, 123" />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-end gap-2 mt-4">
                        <a asp-area="Admin"
                           asp-controller="Cinemas"
                           asp-action="Index"
                           class="btn btn-secondary">
                            <i class="fa-solid fa-arrow-left me-1"></i>
                            Назад
                        </a>

                        <button type="submit" class="btn btn-maroon">
                            <i class="fa-solid fa-floppy-disk me-1"></i>
                            Створити кінотеатр
                        </button>
                    </div>

                </form>
            </div>
        </div>

    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
