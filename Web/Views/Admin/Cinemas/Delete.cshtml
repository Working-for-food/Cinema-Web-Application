@model Web.ViewModels.Admin.Cinemas.CinemaEditVm

@{
    ViewData["Title"] = "Видалити кінотеатр";
}

<h2>Видалити кінотеатр</h2>

<div class="alert alert-warning">
    Ви впевнені, що хочете видалити цей кінотеатр?
</div>

<dl class="row">
    <dt class="col-sm-2">Назва</dt>
    <dd class="col-sm-10">@Model.Name</dd>

    <dt class="col-sm-2">Адреса</dt>
    <dd class="col-sm-10">@Model.Address</dd>

    <dt class="col-sm-2">Місто</dt>
    <dd class="col-sm-10">@Model.City</dd>
</dl>

<form asp-area="Admin"
      asp-controller="Cinemas"
      asp-action="DeleteConfirmed"
      asp-route-id="@Model.Id"
      method="post">

    @Html.AntiForgeryToken()

    <button type="submit" class="btn btn-danger">
        Так, видалити
    </button>

    <a asp-area="Admin"
       asp-controller="Cinemas"
       asp-action="Index"
       class="btn btn-secondary">
        Скасувати
    </a>
</form>
