@model Web.ViewModels.Admin.Cinemas.CinemaEditVm

@{
    ViewData["Title"] = "Видалення кінотеатру";
}

<section class="py-5 gray-bg">
    <div class="container-fluid">

        <h1 class="section-title">Видалити кінотеатр</h1>

        <div class="card shadow-sm col-lg-8 mx-auto">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fa-solid fa-triangle-exclamation me-2"></i>
                    Підтвердження видалення
                </h5>
            </div>

            <div class="card-body p-4">

                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger mb-3">
                        @TempData["ErrorMessage"]
                    </div>
                }

                <div class="alert alert-warning mb-4">
                    Ви впевнені, що хочете видалити цей кінотеатр?
                    <strong>Цю дію неможливо скасувати.</strong>
                </div>

                <div class="mb-4">

                    <div class="mb-3">
                        <label class="form-label text-muted">
                            <i class="fa-solid fa-film me-1"></i>
                            Назва кінотеатру
                        </label>
                        <div class="fw-semibold fs-5">@Model.Name</div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label text-muted">
                            <i class="fa-solid fa-location-dot me-1"></i>
                            Місто
                        </label>
                        <div class="fw-semibold fs-5">@Model.City</div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label text-muted">
                            <i class="fa-solid fa-map-location-dot me-1"></i>
                            Адреса
                        </label>
                        <div class="fw-semibold fs-5">@Model.Address</div>
                    </div>

                </div>

                <form asp-area="Admin"
                      asp-controller="Cinemas"
                      asp-action="DeleteConfirmed"
                      asp-route-id="@Model.Id"
                      method="post">

                    @Html.AntiForgeryToken()

                    <div class="d-flex justify-content-end gap-2 mt-4">
                        <a asp-area="Admin"
                           asp-controller="Cinemas"
                           asp-action="Index"
                           class="btn btn-secondary">
                            <i class="fa-solid fa-arrow-left me-1"></i>
                            Скасувати
                        </a>

                        <button type="submit" class="btn btn-maroon">
                            <i class="fa-solid fa-trash me-1"></i>
                            Видалити кінотеатр
                        </button>
                    </div>
                </form>

            </div>
        </div>

    </div>
</section>

