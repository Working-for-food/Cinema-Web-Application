@model Web.ViewModels.Admin.Cinemas.CinemasIndexVm

@{
    ViewData["Title"] = "Cinemas";
}

<h2>Cinemas</h2>

@if (TempData["Success"] is string ok)
{
    <div class="alert alert-success">@ok</div>
}
@if (TempData["Error"] is string err)
{
    <div class="alert alert-danger">@err</div>
}

<form method="get" asp-action="Index" class="row g-2 mb-3">

    <div class="col-md-3">
        <input name="search"
               value="@Model.Search"
               class="form-control"
               placeholder="Search by name/address/city" />
    </div>

    <div class="col-md-3">
        <select name="city"
                class="form-select"
                asp-items="Model.Cities">
            <option value="">All cities</option>
        </select>
    </div>

    <div class="col-md-3">
        <select name="sort"
                class="form-select"
                asp-items="Model.SortOptions">
        </select>
    </div>

    <div class="col-md-3 d-flex gap-2">
        <button type="submit" class="btn btn-primary">Apply</button>
        <a asp-action="Index" class="btn btn-secondary">Reset</a>
        <a asp-action="Create" class="btn btn-success">Create</a>
    </div>
</form>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Address</th>
            <th>City</th>
            <th style="width: 280px;"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var c in Model.Cinemas)
        {
            <tr>
                <td>@c.Name</td>
                <td>@c.Address</td>
                <td>@c.City</td>
                <td class="d-flex gap-2">
                    <a asp-action="Details" asp-route-id="@c.Id" class="btn btn-sm btn-info">Details</a>
                    <a asp-action="Edit" asp-route-id="@c.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@c.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
