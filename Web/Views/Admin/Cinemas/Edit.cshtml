@model Web.ViewModels.Admin.Cinemas.CinemaEditVm

@{
    ViewData["Title"] = "Редагування кінотеатру";
}

<section class="py-5 gray-bg">
    <div class="container-fluid">

        <h1 class="section-title text-center mb-4">РЕДАГУВАННЯ КІНОТЕАТРУ</h1>

        @if (TempData["Success"] is string ok)
        {
            <div class="alert alert-success mb-3">@ok</div>
        }
        @if (TempData["Error"] is string err)
        {
            <div class="alert alert-danger mb-3">@err</div>
        }

        <div class="card shadow-sm col-lg-8 mx-auto">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fas fa-pen-to-square me-2"></i>
                    Редагування інформації про кінотеатр
                </h5>
            </div>

            <div class="card-body p-4">

                <form asp-area="Admin"
                      asp-controller="Cinemas"
                      asp-action="Edit"
                      method="post">

                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="Id" />

                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="mb-3">
                        <label asp-for="Name" class="form-label text-muted">
                            <i class="fa-solid fa-film me-1"></i>
                            Назва кінотеатру
                        </label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="City" class="form-label text-muted">
                            <i class="fa-solid fa-location-dot me-1"></i>
                            Місто
                        </label>
                        <input asp-for="City" class="form-control" />
                        <span asp-validation-for="City" class="text-danger"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Address" class="form-label text-muted">
                            <i class="fa-solid fa-map-location-dot me-1"></i>
                            Адреса
                        </label>
                        <input asp-for="Address" class="form-control" />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>

                    <!-- Actions -->
                    <div class="d-flex justify-content-end gap-2 mt-4">
                        <a asp-area="Admin"
                           asp-controller="Cinemas"
                           asp-action="Index"
                           class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-1"></i>
                            Назад
                        </a>

                        <button type="submit" class="btn btn-maroon">
                            <i class="fas fa-save me-1"></i>
                            Зберегти зміни
                        </button>
                    </div>

                </form>

            </div>
        </div>

    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
