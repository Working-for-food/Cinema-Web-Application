@model Web.ViewModels.Admin.Halls.HallEditVm

<h2>@(Model.Id == null ? "Create Hall" : "Edit Hall")</h2>

<form method="post" asp-action="@(Model.Id == null ? "Create" : "Edit")">
    @Html.AntiForgeryToken()

    @if (Model.Id != null)
    {
        <input type="hidden" asp-for="Id" />
    }

    <div>
        <label>Cinema</label>
        <select asp-for="CinemaId" asp-items="Model.Cinemas"></select>
        <span asp-validation-for="CinemaId"></span>
    </div>

    <div>
        <label>Name</label>
        <input asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>

    <div asp-validation-summary="All"></div>

    <button type="submit">Save</button>
    <a asp-action="Index" asp-route-cinemaId="@Model.CinemaId">Back</a>
</form>
