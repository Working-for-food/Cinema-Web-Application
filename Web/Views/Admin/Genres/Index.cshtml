@model List<Infrastructure.Entities.Genre>
<style>
    .container {
        max-width: 900px;
        margin: 30px auto;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 15px;
    }

    th, td {
        padding: 10px;
        border-bottom: 1px solid #ddd;
    }

    th {
        text-align: left;
    }

    .actions a {
        padding: 6px 10px;
        margin-right: 6px;
        text-decoration: none;
        border-radius: 4px;
        font-size: 14px;
    }

    .btn-create {
        padding: 8px 14px;
        background: #4f46e5;
        color: white;
        text-decoration: none;
        border-radius: 6px;
    }

    .btn-details {
        background: #e5e7eb;
        color: #111;
    }

    .btn-edit {
        background: #fde68a;
        color: #111;
    }

    .btn-delete {
        background: #fecaca;
        color: #7f1d1d;
    }

    .alert-success {
        background: #dcfce7;
        padding: 10px;
        border-radius: 6px;
        margin-bottom: 15px;
    }

    .alert-error {
        background: #fee2e2;
        padding: 10px;
        border-radius: 6px;
        margin-bottom: 15px;
    }
</style>

<div class="container">
    <h2>Жанри</h2>

    @if (TempData["Success"] != null)
    {
        <div class="alert-success">@TempData["Success"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert-error">@TempData["Error"]</div>
    }

    <a class="btn-create" asp-area="Admin" asp-controller="Genres" asp-action="Create">Додати жанр</a>

    <table>
        <thead>
            <tr>
                <th>Назва</th>
                <th>Дії</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var g in Model)
            {
                <tr>
                    <td>@g.Name</td>
                    <td class="actions">
                        <a class="btn-details" asp-area="Admin" asp-controller="Genres" asp-action="Details" asp-route-id="@g.Id">Деталі</a>
                        <a class="btn-edit" asp-area="Admin" asp-controller="Genres" asp-action="Edit" asp-route-id="@g.Id">Редагувати</a>
                        <a class="btn-delete" asp-area="Admin" asp-controller="Genres" asp-action="Delete" asp-route-id="@g.Id">Видалити</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
