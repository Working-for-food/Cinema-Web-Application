@model Web.ViewModels.Admin.MovieIndexVm

@{
    ViewData["Title"] = "List of movies";
}

<div class="container mt-4">
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Movies</h2>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Add a movie
        </a>
    </div>

    <form method="get" asp-action="Index" class="mb-4">
        <div class="input-group">
            <input type="text" name="search" class="form-control" placeholder="Search by name..." value="@Model.SearchTerm">
            <button class="btn btn-primary" type="submit">Search</button>
            @if (!string.IsNullOrEmpty(Model.SearchTerm))
            {
                <a asp-action="Index" class="btn btn-secondary">Reset</a>
            }
        </div>
    </form>

    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>
                    <a asp-action="Index"
                       asp-route-sortBy="@(Model.SortBy == "title_desc" ? "title" : "title_desc")"
                       asp-route-search="@Model.SearchTerm"
                       class="text-white text-decoration-none">
                        Name @(Model.SortBy == "title_desc" ? "▼" : "▲")
                    </a>
                </th>
                <th>
                    <a asp-action="Index"
                       asp-route-sortBy="@(Model.SortBy == "date_desc" ? "date_asc" : "date_desc")"
                       asp-route-search="@Model.SearchTerm"
                       class="text-white text-decoration-none">
                        Release date
                    </a>
                </th>
                <th>Duration</th>
                <th>Genres</th>
                <th>Sessions</th>
                <th class="text-end">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model.Movies)
            {
                <tr>
                    <td>@movie.Title</td>
                    <td>@movie.ReleaseDate?.ToString("dd.MM.yyyy")</td>
                    <td>@(movie.Duration.HasValue ? $"{movie.Duration} min" : "-")</td>
                    <td>
                        <span class="badge bg-info text-dark">@movie.GenreNames</span>
                    </td>
                    <td>
                        @if (movie.SessionsCount > 0)
                        {
                            <span class="badge bg-secondary">@movie.SessionsCount</span>
                        }
                        else
                        {
                            <span class="text-muted">0</span>
                        }
                    </td>
                    <td class="text-end">
                        <a asp-action="Details" asp-route-id="@movie.Id" class="btn btn-sm btn-info">Details</a>
                        <a asp-action="Edit" asp-route-id="@movie.Id" class="btn btn-sm btn-warning">Edit</a>

                        @if (movie.SessionsCount > 0)
                        {
                            <button type="button" class="btn btn-sm btn-danger" disabled title="This movie has sessions">Delete</button>
                        }
                        else
                        {
                            <form asp-action="Delete" asp-route-id="@movie.Id" method="post" class="d-inline"
                                  onsubmit="return confirm('Are you sure you want to delete this movie?');">
                                <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                            </form>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <nav>
        <ul class="pagination justify-content-center">
            <li class="page-item @(Model.Page == 1 ? "disabled" : "")">
                <a class="page-link" asp-action="Index" asp-route-page="@(Model.Page - 1)" asp-route-search="@Model.SearchTerm" asp-route-sortBy="@Model.SortBy">Prev</a>
            </li>

            <li class="page-item disabled">
                <span class="page-link">Сторінка @Model.Page з @Model.TotalPages</span>
            </li>

            <li class="page-item @(Model.Page >= Model.TotalPages ? "disabled" : "")">
                <a class="page-link" asp-action="Index" asp-route-page="@(Model.Page + 1)" asp-route-search="@Model.SearchTerm" asp-route-sortBy="@Model.SortBy">Next</a>
            </li>
        </ul>
    </nav>
</div>
