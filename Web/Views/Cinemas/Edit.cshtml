@model Application.DTOs.CinemaEditVm

<h2>Edit Cinema</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div>
        <label>Name</label>
        <input asp-for="Name" />
    </div>

    <div>
        <label>Address</label>
        <input asp-for="Address" />
    </div>

    <div>
        <label>City</label>
        <input asp-for="City" />
    </div>

    <button type="submit">Save</button>
</form>

<a asp-action="Index">Back</a>
