@model IReadOnlyList<Application.DTOs.SessionListDto>

<h2>Sessions</h2>

@if (TempData["success"] is string msg)
{
    <div class="alert alert-success">@msg</div>
}

<form method="get" class="mb-3">
    <label>From</label>
    <input type="datetime-local" name="from" />
    <label>To</label>
    <input type="datetime-local" name="to" />
    <button type="submit">Filter</button>
    <a asp-action="Create">Create</a>
</form>

<table class="table">
    <thead>
        <tr>
            <th>Start</th>
            <th>End</th>
            <th>MovieId</th>
            <th>HallId</th>
            <th>Type</th>
            <th>Cancelled</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var s in Model)
        {
            <tr>
                <td>@s.StartTime</td>
                <td>@s.EndTime</td>
                <td>@s.MovieId</td>
                <td>@s.HallId</td>
                <td>@s.PresentationType</td>
                <td>@s.IsCancelled</td>
                <td>
                    @if (!s.IsCancelled)
                    {
                        <form asp-action="Cancel" method="post" style="display:inline">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@s.Id" />
                            <button type="submit" class="btn btn-sm btn-warning">Cancel</button>
                        </form>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
