```cshtml
@model SessionDetailsDto

@{
    ViewData["Title"] = "Деталі сеансу";
}

<h1>Сеанс №@Model.Id</h1>

<dl class="row">
    <dt class="col-sm-3">ID фільму</dt>
    <dd class="col-sm-9">@Model.MovieId</dd>

    <dt class="col-sm-3">ID залу</dt>
    <dd class="col-sm-9">@Model.HallId</dd>

    <dt class="col-sm-3">Початок</dt>
    <dd class="col-sm-9">@Model.StartTime</dd>

    <dt class="col-sm-3">Кінець</dt>
    <dd class="col-sm-9">@Model.EndTime</dd>

    <dt class="col-sm-3">Тип показу</dt>
    <dd class="col-sm-9">@Model.PresentationType</dd>

    <dt class="col-sm-3">Скасований</dt>
    <dd class="col-sm-9">@(Model.IsCancelled ? "Так" : "Ні")</dd>

    <dt class="col-sm-3">Створено</dt>
    <dd class="col-sm-9">@Model.CreatedAt</dd>

    <dt class="col-sm-3">Оновлено</dt>
    <dd class="col-sm-9">@Model.UpdatedAt</dd>
</dl>

<div class="d-flex gap-2">
    <a class="btn btn-outline-secondary" asp-action="Edit" asp-route-id="@Model.Id">Редагувати</a>

    @if (!Model.IsCancelled)
    {
        <form asp-action="Cancel" asp-route-id="@Model.Id" method="post">
            @Html.AntiForgeryToken()
            <button class="btn btn-outline-danger" type="submit">Скасувати</button>
        </form>
    }
    else
    {
        <form asp-action="Restore" asp-route-id="@Model.Id" method="post">
            @Html.AntiForgeryToken()
            <button class="btn btn-outline-success" type="submit">Відновити</button>
        </form>
    }

    <a class="btn btn-link" asp-action="Index">Назад</a>
</div>
```
