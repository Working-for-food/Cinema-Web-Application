@model SessionDetailsDto

@{
    ViewData["Title"] = "Скасувати сеанс";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="mb-0">Скасувати сеанс</h1>
    <a class="btn btn-outline-secondary" asp-action="Details" asp-route-id="@Model.Id">Назад до деталей</a>
</div>

<div class="alert alert-warning">
    Ви впевнені, що хочете скасувати сеанс <strong>№@Model.Id</strong>?
</div>

<div class="card shadow-sm">
    <div class="card-body">
        <ul class="mb-0">
            <li><strong>ID фільму:</strong> @Model.MovieId</li>
            <li><strong>ID залу:</strong> @Model.HallId</li>
            <li><strong>Початок:</strong> @Model.StartTime.ToString("dd.MM.yyyy HH:mm")</li>
            <li><strong>Кінець:</strong> @Model.EndTime.ToString("dd.MM.yyyy HH:mm")</li>
        </ul>
    </div>
</div>

<form asp-action="Cancel" asp-route-id="@Model.Id" method="post" class="mt-3">
    @Html.AntiForgeryToken()
    <button class="btn btn-danger" type="submit">Так, скасувати</button>
    <a class="btn btn-outline-secondary" asp-action="Details" asp-route-id="@Model.Id">Назад</a>
</form>
